<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="675.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.main.Menu">
   <children>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/main_menu_image.jpg" />
         </image>
      </ImageView>
      <Button fx:id="newGameButton" layoutX="375.0" layoutY="400.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="New Game">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="375.0" layoutY="520.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Exit">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="optionsButton" layoutX="375.0" layoutY="460.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Options">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
