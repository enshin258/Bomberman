<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="675.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.main.Menu">
   <children>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/main_menu_image.jpg" />
         </image>
      </ImageView>
      <Button fx:id="newGameButton" layoutX="375.0" layoutY="338.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="New Game">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="375.0" layoutY="463.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Exit">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <RadioButton fx:id="players_4" layoutX="375.0" layoutY="438.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: lightgray;" text="4 Players">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="players_3" layoutX="375.0" layoutY="413.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: lightgray;" text="3 Players">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="players_2" layoutX="375.0" layoutY="388.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="150.0" selected="true" style="-fx-background-color: lightgray;" text="2 Players">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </RadioButton>
   </children>
</AnchorPane>
